@model IEnumerable<User>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["ResultOk"] != null)
{
    <h1 class="alert-success">@TempData["ResultOk"]</h1>
}

<div class="container shadow p-5">
    <style>
        .table td {
            text-align: center;
        }
        .table th {
        text-align: center;
        }
    </style>
    
    <h1 class="text-center mb-3">LIST USER </h1>
    <div class="col mb-3">
        <a asp-controller="User" asp-action="Create" class="btn btn-lg btn-success"><i class="bi bi-person-plus"></i> Add User</a>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">User Name</th>
                <th scope="col">Name User</th>
                <th scope="col">Password</th>
                <th scope="col">Email</th>
      
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @item.UserName
                    </td>
                    <td width="20%">
                        @item.NameUser
                    </td>
                    <td width="10%">
                        @item.Password
                    </td>
                    <td width="20%">
                        @item.Email
                    </td>
                    
                    <td>
                        <div >
                            <a asp-controller="User" asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-lg btn-primary"><i class="bi bi-pencil-square"></i> Edit</a>&nbsp;
                            <a asp-controller="User" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-lg btn-danger"><i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

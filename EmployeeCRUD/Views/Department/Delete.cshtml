@model Department
<html>
<head>

    <style>


        input[type=submit] {
            width: 100%;
            color:ghostwhite;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type=submit]:hover {
                background-color: darkred;
            }

        div {
            border-radius: 5px;
            background-color: ghostwhite;
            padding: 2px;
        }

    </style>
</head>
<body>
    <div class="container shadow p-5">
        <h1>DELETE DEPARTMENT</h1>
        <form method="post" asp-action="Remove">
            <input asp-for="Id" hidden />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="DepartmentName">Department Name</label>
                    <input type="text" class="form-control mb-3" asp-for="DepartmentName" placeholder="Enter Ypur Department Name">
                    <span asp-validation-for="DepartmentName" class=" alert-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div>
                    @Html.Label("Status","Select Status :")<br>
                    <b>Enable</b>
                    @Html.RadioButtonFor(model=>model.Status,"Enable")
                    <b>Unable</b>
                    @Html.RadioButtonFor(model=>model.Status,"Unable")
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Address">Address</label>
                    <input type="text" class="form-control mb-3" asp-for="Address" placeholder="Enter Address">
                    <span asp-validation-for="Address" class=" alert-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Phone">Phone</label>
                    <input type="text" class="form-control mb-3" asp-for="Phone" placeholder="Enter Your Phone">
                    <span asp-validation-for="Phone" class=" alert-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="DepartmentName">Department Name</label>
                    <input type="text" class="form-control mb-3" asp-for="DepartmentName" placeholder="Enter First Name">
                    <span asp-validation-for="DepartmentName" class=" alert-danger"></span>
                </div>
            </div>

            <div>
                <input class="btn btn-danger " type="submit" value="Delete">
                <a asp-controller="Department" asp-action="Index" class="btn btn-lg btn-primary p-2">Back To List Department</a>
            </div>
            
        </form>
        </div>
</body>
</html>
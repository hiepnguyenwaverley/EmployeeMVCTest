@model Department
<html>
    <head>
        
    <style>

        input[type=submit] {
          
            background-color: forestgreen;
            color: white;
       
        }

            input[type=submit]:hover {
                background-color:darkgreen;
            }

        div {
            border-radius: 5px;
            background-color: ghostwhite;
            padding: 5px;
        }
    </style>
    </head>
    <body>
    <div class="container shadow p-5">
    <h1>INSERT DEPARTMENT</h1>
        <form method="post" action="Save">
            
             <div class="form-row">
                <div class="form-group col-md-6">
                        <label asp-for="DepartmentName">Department Name</label>
                        <input type="text" class="form-control mb-3" asp-for="DepartmentName" placeholder="Enter Your Department Name">
                        <span asp-validation-for="DepartmentName" class=" alert-danger"></span>
                </div>
            </div>


            <div class="form-row">
                <div>
                @Html.Label("Status","Select Status :")<br>
                <b>Enable</b>
                @Html.RadioButtonFor(model=>model.Status,"Enable")
                <b>Unable</b>
                @Html.RadioButtonFor(model=>model.Status,"Unable")
                </div>
            </div>


            <div class="form-row">
                <div class="form-group col-md-6">
                        <label asp-for="Address">Address</label>
                        <input type="text" class="form-control mb-3" asp-for="Address" placeholder="Enter Address">
                        <span asp-validation-for="Address" class=" alert-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                        <label asp-for="Phone">Phone</label>
                        <input type="text" class="form-control mb-3" asp-for="Phone" placeholder="Enter Your Phone">
                        <span asp-validation-for="Phone" class=" alert-danger"></span> 
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                        <label asp-for="Description">Description</label>
                        <input type="text" class="form-control mb-3" asp-for="Description" placeholder="Enter Description">
                        <span asp-validation-for="Description" class=" alert-danger"></span>
                </div>
            </div>

            <div>
                <button type="submit" class="btn btn-lg btn-success p-2"><i class="bi bi-cloud-plus-fill"></i> Save</button>
                <a asp-controller="Department" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List Department </a>
            </div>
        </form>
        </div>
    </body>
</html>
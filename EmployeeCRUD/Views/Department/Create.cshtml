@model Department
<html>
    <head>
        
    <style>

        input[type=submit] {
            width: 100%;
            background-color: forestgreen;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type=submit]:hover {
                background-color:darkgreen;
            }

        div {
            border-radius: 5px;
            background-color: ghostwhite;
            padding: 5px;
        }
    </style>
    </head>
    <body>
    <div class="container shadow p-5">
    <h1>INSERT DEPARTMENT</h1>
        <form method="post" action="Save">
            
             <div class="form-row">
                <div class="form-group col-md-6">
                @Html.Label("Departmentname","Department Name :")
                @Html.TextBoxFor(model => model.DepartmentName)
                </div>
            </div>


            <div class="form-row">
                <div>
                @Html.Label("Status","Select Status :")<br>
                <b>Enable</b>
                @Html.RadioButtonFor(model=>model.Status,"Enable")
                <b>Unable</b>
                @Html.RadioButtonFor(model=>model.Status,"Unable")
                </div>
            </div>


            <div class="form-row">
                <div class="form-group col-md-6">
                @Html.Label("Address","Address:")
                @Html.TextBoxFor(model => model.Address)
                </div>
            </div>


            <div class="form-row">
                <div class="form-group col-md-6">
                @Html.Label("Phone","Phone :")
                @Html.TextBoxFor(model => model.Phone)
                </div>
            </div>


            <div class="form-row">
                <div class="form-group col-md-6">
                @Html.Label("Description","Description :")
                @Html.TextBoxFor(model => model.Description)
                </div>
            </div>

            <div>
                <input class="btn btn-primary" type="submit" value="Save">
                <a asp-controller="Department" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List Department</a>
            </div>
            </table>
        </form>
    </body>
</html>
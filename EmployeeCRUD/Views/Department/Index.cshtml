@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}
<style>
    div {
        
        background-color: ghostwhite;
        padding: 5px;
    }
</style>
<div class="container shadow p-5">

    <h1 class="text-center mb-3">LIST DEPARTMENT </h1>
    <div>
        <a asp-controller="Department" asp-action="Create" class="btn btn-success"><i class="bi bi-file-plus-fill"></i>Add Department</a>
    </div>
    <br />
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Department Name</th>
                <th scope="col">Status</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
                <th scope="col">Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @item.DepartmentName
                    </td>
                    <td width="20%">
                        @item.Status
                    </td>
                    <td width="20%">
                        @item.Phone
                    </td>
                    <td width="20%">
                        @item.Address
                    </td>
                    <td width="20%">
                        @item.Description
                    </td>
                    <td>
                        <div role="group" class="w-60 btn-group">
                            
                            <a asp-controller="Department" asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>&nbsp;
                            <a asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id" class=" btn btn-sm btn-danger"><i class="bi bi-pencil-square"></i>Delete</a>&nbsp;
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

